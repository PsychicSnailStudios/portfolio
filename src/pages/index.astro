---
import BaseLayout from '../layouts/BaseLayout.astro'
import IconBox from '../components/IconBox.astro'
import ImageBox from '../components/ImageBox.astro'

import '../styles/home.css';

const skills = [
	{
		icon: "unity",
		title: "Unity",
		subTitle: "PRO - 6 years",
	},
	{
		icon: "cs",
		title: "C#",
		subTitle: "PRO - 6 years",
	},
	{
		icon: "vscode",
		title: "Visual Studio",
		subTitle: "PRO - 6 years",
	},
	{
		icon: "git",
		title: "Git",
		subTitle: "USER - 3 years",
	},
	{
		icon: "html",
		title: "HTML",
		subTitle: "STUDENT - 1 year",
	},
	{
		icon: "css",
		title: "CSS",
		subTitle: "STUDENT - 1 year",
	},
	{
		icon: "java",
		title: "Java / JS",
		subTitle: "STUDENT - 1 year",
	},
	{
		icon: "json",
		title: "JSON",
		subTitle: "PRO - 7 years",
	},
	{
		icon: "aseprite",
		title: "Aseprite",
		subTitle: "USER - 3 years",
	},
	{
		icon: "affinity",
		title: "Affinity",
		subTitle: "USER - 2 years",
	},
	{
		icon: "figma",
		title: "Figma",
		subTitle: "STUDENT - 6 months",
	},
]
---

<BaseLayout title="Portfolio - Home">

	<!-- HERO -->
	<section class="hero" id="hero">
		<div class="inner-section">
			<h1 class="h1 text-dark">Hi There,<br>I'm <span class="text-gradient">Dawson</span></h1>
			<h3 class="h3 text-muted">game artist / developer</h3>
			<p class="p p-short text-muted">Just a passionate and self-taught indi dev looking
									to help tell stories through games. Lover of books, music, and coffee.</p>
		</div>

		<div class="inner-section">
			<ImageBox allign="allign-right" img="../src/images/me.jpg" size="lg" />
			<ImageBox allign="allign-left" pos="push-up" img="../src/images/psychicsnail.jpg" size="md" />
			<ImageBox allign="allign-center" space="space" pos="push-up-large" img="../src/images/pixeljunky.jpg" size="sm" />
		</div>
	</section>

	<!-- SKILLS -->
	<img class="shape-divider" src="../src/dividers/tilt_wave.svg"/>

	<section class="skills" id="skills">
		<h2 class="h2 text-light">Skills</h2>
		<div class="icon-grid">
			{
                skills.map(skill => (
					<IconBox title={skill.title} subTitle={skill.subTitle} icon={skill.icon} />
                ))
            }
		</div>
	</section>
	
	<!-- ABOUT -->
	<img id="about" class="shape-divider" src="../src/dividers/block_wave.svg"/>
	<section class="about">
		<h2 class="h2">A bit about me</h2>
		<div class="inner-section-wide">
			<div class="inner-section">
				<h3 class="h3">Core Qualifications</h3>
				<ul>
					<li>Experience in many aspects of game development, including designing, programming,
						the art pipe-line, prototyping and debugging</li>
					<li>Specialization in C# and knowledge of Java, JSON and XML</li>
					<li>Great analytical and problem-solving skills</li>
					<li>Ability to work as part of a team to meet a common goal</li>
				</ul>
			</div>
			<div class="inner-section">
				<img src="../src/images/psychicsnail.jpg" alt="">
			</div>
		</div>

		<div class="inner-section-wide">
			<div class="inner-section">
				<img src="../src/images/psychicsnail.jpg" alt="">
			</div>
			<div class="inner-section">
				<h3 class="h3">How it started</h3>
				<p class="p">quick recap of going from sketches to minecraft to unity and beond!</p>
			</div>
		</div>

		<div class="inner-section-wide">
			<div class="inner-section">
				<h3 class="h3">How it's going</h3>
				<p class="p">experiancs / current projects</p>
			</div>
			<div class="inner-section">
				<img src="../src/images/psychicsnail.jpg" alt="">
			</div>
		</div>
	</section>
</BaseLayout>
