---
import '../styles/nav.css';

import { Icon } from 'astro-icon'

const navLinks = [
    {
        name: 'About',
        url: '/',
    },
    {
        name: 'Portfolio',
        url: '/portfolio',
    },
    {
        name: 'Contact',
        url: '/contact',
    }
]
---

<nav>
    <div class="container nav-container">
        <Icon name="logo" width={48} class="logo" />
        <div class="nav-wrapper">
            <button class="menu-button" id="menu-btn" aria-expanded="false" aria-label="Open mobile nav">
                <Icon name="feather:menu" width={25} />
            </button>
            <ul class="nav-links" role="navigation">
                {
                    navLinks.map(link => (
                        <li role="none">
                            <a href={link.url} class="button">{link.name}</a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</nav>

<script>
  const navBtn = document.querySelector('#menu-btn');
  navBtn.addEventListener('click', () => {
    navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false');
  })
</script>